<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ULALA"
    xmlns:mvvm="using:ULALA.UI.Core.MVVM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    x:Class="ULALA.Views.CashFundsView"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="650"/>
            <RowDefinition Height="100"/>
            
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>
        <!-- Top-->
        <Frame Background="CornflowerBlue" MinHeight="100" VerticalAlignment="Top" Height="100">
            <Grid>
                <Button VerticalAlignment="Center" HorizontalAlignment="Left" Command="{Binding OnBackCommand}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
                    <Image Source="{Binding PageIcon}"  HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Height="40" Width="40" 
                                                   MinHeight="40" MinWidth="40"/>

                    <TextBlock Text="Añadir Cambios" HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="36" Foreground="WhiteSmoke" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Frame>
        <!-- center top-->
        <Frame Background="LightGray"  VerticalAlignment="Top" Grid.Row="1"  >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="350" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="630" />
                    
                </Grid.RowDefinitions>



                <StackPanel x:Name="StackPanel_0" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="100">
                    <TextBlock x:Name="SP_0_TB1" Padding="30" Text="Indtroduzca los cambios en la máquina"   FontSize="20" Margin="0,10,360,0" />
                    <TextBlock x:Name="SP_0_TB2" Padding="30"  Text="Importe Introducido" Width="400" HorizontalAlignment="Center" FontSize="20"/>
                </StackPanel>

                <StackPanel x:Name="StackPanel_1" Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <TextBlock x:Name="SP_1_TB1" Padding="15" Text="Una Vez introducidos, pulse Salir" Width="500" HorizontalAlignment="Left" FontSize="20" />
                    <TextBlock x:Name="SP_1_TB2" Padding="15" Text="Billetes de $1000 pesos:"  Height="50" HorizontalAlignment="Left" FontSize="20"/>
                    <TextBlock x:Name="SP_1_TB3" Padding="15" Text="Billetes de $500 pesos:"   Height="50" HorizontalAlignment="Left" FontSize="20"/>
                    <TextBlock x:Name="SP_1_TB4" Padding="15" Text="Billetes de $200 pesos:"   Height="50" HorizontalAlignment="Left" FontSize="20"/>
                    <TextBlock x:Name="SP_1_TB5" Padding="15" Text="Billetes de $100 pesos:"   Height="50" HorizontalAlignment="Left" FontSize="20"/>
                    <TextBlock x:Name="SP_1_TB6" Padding="15" Text="Billetes de $50 pesos:"    Height="50" HorizontalAlignment="Left" FontSize="20"/>
                    <TextBlock x:Name="SP_1_TB7" Padding="15" Text="Billetes de $20 pesos:"    Height="50" HorizontalAlignment="Left" FontSize="20"/>
                    <TextBlock x:Name="SP_1_TB8" Padding="15" Text="Monedas de $10 pesos:"     Height="50" HorizontalAlignment="Left" FontSize="20"/>
                    <TextBlock x:Name="SP_1_TB9" Padding="15" Text="Monedas de $5 pesos:"      Height="50" HorizontalAlignment="Left" FontSize="20"/>
                    <TextBlock x:Name="SP_1_TB10" Padding="15" Text="Monedas de $2 pesos:"     Height="50" HorizontalAlignment="Left" FontSize="20"/>
                    <TextBlock x:Name="SP_1_TB11" Padding="15" Text="Monedas de $1 peso:"      Height="50" HorizontalAlignment="Left" FontSize="20"/>
                    <TextBlock x:Name="SP_1_TB12" Padding="15" Text="Monedas de 50 centavos:"  Height="50" HorizontalAlignment="Left" FontSize="20"/>
                </StackPanel>

                <StackPanel x:Name="StackPanel_2" Grid.Row="1" Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" MinHeight="800" MinWidth="300">
                    <Image x:Name="SP_2_TB1" Margin="5"   Height="41"  />
                    <Image x:Name="SP_2_TB2" Margin="5"   Height="41" Source="/Assets/Icons/Bill500.png"/>
                    <Image x:Name="SP_2_TB3" Margin="5"   Height="41" Source="/Assets/Icons/Bill500.png"/>
                    <Image x:Name="SP_2_TB4" Margin="5"   Height="41" Source="/Assets/Icons/Bill500.png"/>
                    <Image x:Name="SP_2_TB5" Margin="5"   Height="41" Source="/Assets/Icons/Bill500.png"/>
                    <Image x:Name="SP_2_TB6" Margin="5"   Height="41" Source="/Assets/Icons/Bill500.png"/>
                    <Image x:Name="SP_2_TB7" Margin="5"   Height="41" Source="/Assets/Icons/Bill500.png"/>
                    <Image x:Name="SP_2_TB8" Margin="5"   Height="41" Source="/Assets/Icons/Bill500.png"/>
                    <Image x:Name="SP_2_TB9" Margin="5"   Height="41" Source="/Assets/Icons/Bill500.png"/>
                    <Image x:Name="SP_2_TB10" Margin="5"  Height="41" Source="/Assets/Icons/Bill500.png"/>
                    <Image x:Name="SP_2_TB11" Margin="5"  Height="41" Source="/Assets/Icons/Bill500.png"/>
                    <Image x:Name="SP_2_TB12" Margin="5"  Height="41" Source="/Assets/Icons/Bill500.png"/>
                </StackPanel>

                <StackPanel x:Name="StackPanel_3" Grid.Row="1" Grid.Column="3" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" MinHeight="800" >
                    <TextBlock x:Name="SP_3_TB1" Margin="0" Height="41" Text="Cantidad:"  HorizontalAlignment="Center" FontSize="20" />
                    <TextBox x:Name="SP_3_TB2" Margin="5"   Height="41" Width="150"  PlaceholderText="0" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_3_TB3" Margin="5"   Height="41" Width="150"  PlaceholderText="0" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_3_TB4" Margin="5"   Height="41" Width="150"  PlaceholderText="0" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_3_TB5" Margin="5"   Height="41" Width="150"  PlaceholderText="0" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_3_TB6" Margin="5"   Height="41" Width="150"  PlaceholderText="0" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_3_TB7" Margin="5"   Height="41" Width="150"  PlaceholderText="0" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_3_TB8" Margin="5"   Height="41" Width="150"  PlaceholderText="0" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_3_TB9" Margin="5"   Height="41" Width="150"  PlaceholderText="0" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_3_TB10" Margin="5"  Height="41" Width="150"  PlaceholderText="0" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_3_TB11" Margin="5"  Height="41" Width="150"  PlaceholderText="0" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_3_TB12" Margin="5"  Height="41" Width="150"  PlaceholderText="0" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                </StackPanel>

                <StackPanel x:Name="StackPanel_4" Grid.Row="1" Grid.Column="4" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" MinHeight="800" MinWidth="300">
                    <TextBlock x:Name="SP_4_TB1" Padding="5" Text="Monto:"  HorizontalAlignment="Center" FontSize="20" />
                    <TextBox x:Name="SP_4_TB2" Margin="5"   Height="41" Width="150"  PlaceholderText="$0.00" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_4_TB3" Margin="5"   Height="41" Width="150"  PlaceholderText="$0.00" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_4_TB4" Margin="5"   Height="41" Width="150"  PlaceholderText="$0.00" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_4_TB5" Margin="5"   Height="41" Width="150"  PlaceholderText="$0.00" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_4_TB6" Margin="5"   Height="41" Width="150"  PlaceholderText="$0.00" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_4_TB7" Margin="5"   Height="41" Width="150"  PlaceholderText="$0.00" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_4_TB8" Margin="5"   Height="41" Width="150"  PlaceholderText="$0.00" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_4_TB9" Margin="5"   Height="41" Width="150"  PlaceholderText="$0.00" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_4_TB10" Margin="5"  Height="41" Width="150"  PlaceholderText="$0.00" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_4_TB11" Margin="5"  Height="41" Width="150"  PlaceholderText="$0.00" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                    <TextBox x:Name="SP_4_TB12" Margin="5"  Height="41" Width="150"  PlaceholderText="$0.00" PlaceholderForeground="Black" TextAlignment="center" FontSize="20"/>
                </StackPanel>


            </Grid>

        </Frame>
        <!-- center bottom-->
        <Frame Background="LightGray" MinHeight="100" VerticalAlignment="Top" Grid.Row="2" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1600"/>
                    
                    
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>


                <StackPanel x:Name="StackPanel_5" Grid.Row="1" Grid.Column="1"  
                            Orientation="Horizontal"  
                            VerticalAlignment="Top" Margin="0,0,0,10" Padding="30,0,30,0">
                    <TextBlock x:Name="SP_5_TB1" Height="40" Text="Importe Introducido" FontSize="30" HorizontalAlignment="Left"/>
                    <TextBox x:Name="SP_5_TB2" Height="40" Width="300" PlaceholderText="$0.00" HorizontalAlignment="Right" FontSize="30" Margin="600,0,0,0" Background="LightSkyBlue" PlaceholderForeground="Black"/>
                </StackPanel>

                <StackPanel x:Name="StackPanel_6" Grid.Row="2" Grid.Column="1"  
                            Orientation="Horizontal"  
                            VerticalAlignment="Top" Margin="0,0,0,10" Padding="30,0,30,0">
                    <TextBlock x:Name="SP_6_TB1" Height="40" Text="El reciclador esta casi lleno." FontSize="15" Foreground="Blue" Margin="0,0,0,0" />
                    <TextBlock x:Name="SP_6_TB2" Height="40" Text="El reciclador esta casi lleno." FontSize="15" Foreground="Orange" Margin="400,0,0,00" />
                    <TextBlock x:Name="SP_6_TB3" Height="40" Text="El reciclador esta casi lleno." FontSize="15" Foreground="red" Margin="400,0,0,00" />
                    
                </StackPanel>
                                <Line  
                    X1="-50" Y1="25"  
                    X2="11110" Y2="25"  
                    Stroke="black"  
                    StrokeThickness="5" />
                <Line  
                    X1="-50" Y1="18"  
                    X2="11110" Y2="18"  
                    Stroke="black"  
                    StrokeThickness="2" />





            </Grid>
        </Frame>
        <Frame Background="CornflowerBlue" MinHeight="150" VerticalAlignment="Top" Grid.Row="3" >
            
            <Grid ColumnSpacing="40" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Content="Cancelar" Height="40" Width="120"/>
               

                 
            </Grid>


        </Frame>
    </Grid>
</Page>
